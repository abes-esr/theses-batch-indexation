{
    "settings": {
        "analysis": {
            "filter": {
                "french_stop": {
                    "type": "stop",
                    "stopwords": "_french_"
                },
                "french_stemmer": {
                    "type": "stemmer",
                    "language": "light_french"
                }
            },
            "analyzer": {
                "francais": {
                    "type": "custom",
                    "tokenizer": "standard",
                    "filter": [
                        "lowercase",
                        "french_stop",
                        "french_stemmer",
                        "asciifolding"
                    ]
                }
            },
            "normalizer": {
                "exact": {
                    "type": "custom",
                    "filter": ["lowercase", "asciifolding"]
                }
            }
        }
    },
    "mappings": {
        "properties": {
            "ppn": {
                "type": "keyword"
            },
            "nom": {
                "type": "text",
                "copy_to": "nom_complet",
                "analyzer": "francais",
                "fields": {
                    "exact": {
                        "type": "text",
                        "analyzer": "standard"
                    },
                    "sort": {
                        "type": "keyword"
                    }
                }
            },
            "prenom": {
                "type": "text",
                "copy_to": "nom_complet",
                "analyzer": "francais",
                "fields": {
                    "exact": {
                        "type": "text",
                        "analyzer": "standard"
                    },
                    "sort": {
                        "type": "keyword"
                    }
                }
            },
            "nom_complet": {
                "type": "text"   ,
                "analyzer": "francais",
                "fields": {
                    "exact": {
                         "type": "text",
                        "analyzer": "standard"
                    }
                }            
            },
            "suggestion": {
                "type": "completion",              
                "contexts": [
                    {
                        "name": "has_idref",
                        "type": "category",
                        "path": "has_idref.raw"
                    },
                    {
                        "name": "roles",
                        "type": "category",
                        "path": "roles"
                    }
                ]
            },
            "has_idref": {
                "type": "boolean",
                "fields": {
                    "raw": {
                        "type": "keyword"
                    }
                }
            },
            "roles": {
                "type": "keyword",
                "normalizer": "exact"
            },
            "theses": {
                "type": "nested",
                "properties": {
                    "ppn": {
                        "type": "keyword"
                    },
                    "role": {
                        "type": "keyword"
                    },
                    "titre": {
                        "type": "text"
                    }
                }
            }
        }
    }
}
